
<div class="card">
    <h2 class="card-header">Edit Your Post</h2>
    <form id = "edit-form" class="card-body edit-form">

      <div class="form-group">
        <label class="form-label">Title:</label>
        <input id = "post-title"type="text" class="form-input" name="post-title" value="{{post.title}}"/>
      </div>

      <div class="form-group">
        <label class="form-label">Content:</label>
        <textarea id = "post-content" class="form-textarea form-input" name="post-content">{{post.content}}</textarea>
      </div>

      <div class="form-group">
        <button type="submit" class="btn btn-primary"><i class="bi bi-pencil"></i>Edit Post</button>
      </div>

    </form>
   
</div>
<script src="/javascript/comment.js"></script>
